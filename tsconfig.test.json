{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2019", "es2020", "esnext"], 
    "types": ["jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": ["./**/*"],
  "exclude": ["./tests/**/*"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
